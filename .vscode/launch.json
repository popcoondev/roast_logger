{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            //説明: デバッグモードでデバッグ
            //デバッグモードとは、デバッグ情報が含まれたコードが生成されるため、デバッグが可能です。
            "name": "roast_logger",
            "request": "launch",
            "type": "dart"
        },
        {
            //説明: プロファイルモードでデバッグ
            //プロファイルモードとは、リリースモードとデバッグモードの中間のモードです。
            //リリースモードと同じく、最適化されたコードが生成されますが、デバッグ情報が含まれているため、デバッグが可能です。
            //リリースモードと比べて、パフォーマンスが低下しますが、デバッグが可能なため、リリースモードで問題が発生した場合に、問題の原因を特定するために使用します。
            "name": "roast_logger (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            //説明: リリースモードでデバッグ
            //リリースモードとは、最適化されたコードが生成されるため、デバッグが困難です。
            //リリースモードは、パフォーマンスが最適化されているため、リリース時に使用します。
            "name": "roast_logger (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}